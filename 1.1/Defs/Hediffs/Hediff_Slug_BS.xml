<Defs>
	<HediffDef>
		<defName>Hediff_LTF_SlugLowExugation</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<description>A rare condition that forces the pawn to exudate slug dew liquids now and then</description>
		<label>Dew sceptical</label>
		<labelNoun>Tell me if you see this slugHeDiff.labelNoun</labelNoun>
		
		<comps>
		<li Class="LTF_Slug.HediffCompProperties_LTF_Spawner">
			<thingToSpawn>LTF_SlugDew</thingToSpawn>
			<spawnCount>1</spawnCount>

			<minDaysB4Next>.4</minDaysB4Next>
			<maxDaysB4Next>.5</maxDaysB4Next>

			<spawnMaxAdjacent>40</spawnMaxAdjacent>
			<spawnForbidden>false</spawnForbidden>

			<spawnVerb>exugation</spawnVerb>

			<hungerRelative>true</hungerRelative>
			<mandatoryGrace>true</mandatoryGrace>
			<graceDays>.3</graceDays>

			<tickerLimit>.3</tickerLimit>
		</li>
		</comps>
	</HediffDef>
