<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Hediffs are RimWorld's status effects. They can influence different pawn stats, represent diseases, and more -->
	
	<HediffDef Name="Hediff_LTF_MindBase" Abstract="True">
		<hediffClass>HediffWithComps</hediffClass>
		
		<initialSeverity>.25</initialSeverity>

		<tendable>false</tendable>
		<makesAlert>true</makesAlert>
		<scenarioCanAdd>false</scenarioCanAdd>

		<comps>
			<!-- Protection vs hediff getting broken with clone bay -->
			<!-- Hediff should normaly be destroyed by compPostRemove from Hediff_LTF_Confusion -->
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>1000~2000</disappearsAfterTicks>
			</li>
		</comps>
	</HediffDef>
	

	<!-- Hediff_LTF_MindFlayed -->
	<HediffDef Name="Hediff_LTF_MindFlay" ParentName="Hediff_LTF_MindBase">
		<defName>Hediff_LTF_MindFlay</defName>
		<description>This psychic attack is focused on making the victim an easy and harmless target.</description>
		<label>Mind flayed</label>
		<labelNoun>a staged confusion</labelNoun>

		<defaultLabelColor>(.54, 0, 0)</defaultLabelColor>

		<stages>
			<li>
			    <label>minor</label>
				<minSeverity>0.2</minSeverity>
				<painFactor>1.1</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.1</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>.1</IncomingDamageFactor>
					<AimingDelayFactor>.15</AimingDelayFactor>
					<PsychicSensitivity>.1</PsychicSensitivity>
				</statOffsets>
			</li>
			<li>
			    <label>serious</label>
				<minSeverity>0.4</minSeverity>
				
				<painFactor>1.15</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.2</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>.2</IncomingDamageFactor>
					<AimingDelayFactor>.25</AimingDelayFactor>
					<PsychicSensitivity>.3</PsychicSensitivity>
				</statOffsets>
			</li>
			<li>
			    <label>extreme</label>
				<minSeverity>0.7</minSeverity>
				
				<painFactor>1.2</painFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.3</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
				<statOffsets>
					<IncomingDamageFactor>.35</IncomingDamageFactor>
					<AimingDelayFactor>.35</AimingDelayFactor>
					<PsychicSensitivity>.5</PsychicSensitivity>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	
