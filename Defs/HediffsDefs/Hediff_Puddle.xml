<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef Name="Hediff_TrailBase">
		<defName>Hediff_TrailBase</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<description>base def puddles</description>
		<label>trail base def</label>

		<stages>
			<li>
				<minSeverity>.05</minSeverity>
				<label>minor</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<minSeverity>0.15</minSeverity>
				<label>minor</label>
			</li>
			<li>
				<minSeverity>0.5</minSeverity>
				<label>major</label>
			</li>
		</stages>
		
	</HediffDef>
	
	<!-- purple-->	
	<HediffDef ParentName="Hediff_TrailBase">
		<defName>Hediff_PurpleTrail</defName>
		
		<description>purple puddles</description>
		<label>trail purple</label>
		
		<comps>
			<li Class="MoharHediffs.HediffCompProperties_TrailLeaver">
				<period>10</period>
				
				<moteDef>
					<li>Mote_PuddlePA</li>
					<li>Mote_PuddlePB</li>
					<li>Mote_PuddlePC</li>
				</moteDef>

				<scale>.6~.9</scale>
				
				<hideBySeverity>true</hideBySeverity>
			</li>
		</comps>
	</HediffDef>
	
