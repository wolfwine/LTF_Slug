	<!-- 3 colors circular pawn colors -->	
	<HediffDef ParentName="Hediff_TrailBase">
		<defName>Hediff_ThreeColorsCircularPawnColor</defName>
		
		<hediffClass>HediffWithComps</hediffClass>
		<description>trail leaver</description>
		<label>trail 3 colors circular pawn color</label>
		
		<comps>
			<li Class="MoharHediffs.HediffCompProperties_RainbowTrail">
				<period>12</period>
				
				<motePurpleDef>
					<li>Mote_PuddlePA</li>
					<li>Mote_PuddlePB</li>
					<li>Mote_PuddlePC</li>
				</motePurpleDef>
				<moteBlueDef>
					<li>Mote_PuddleBA</li>
					<li>Mote_PuddleBB</li>
					<li>Mote_PuddleBC</li>
