<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- slug natural exudation -->
	<HediffDef>
		<defName>Hediff_MaterialProduction_SlugDew_Natural</defName>
		<hediffClass>HediffWithComps</hediffClass>
		
		<description>A very common condition for slugs. It forces them to exudate slug dew liquids now and then.
The older slugs are, the fewer and less often they will exsudate.</description>
		<label>natural slug exsudation</label>
		<labelNoun>Tell me if you see this slugHeDiff.labelNoun</labelNoun>
		
		<comps>
					   <!-- MoharHediffs.HediffCompProperties_Spawner -->
			<li Class="MoharHediffs.HediffCompProperties_Spawner">
				<thingToSpawn>LTF_SlugDew</thingToSpawn>
				
				<spawnCount>75</spawnCount>

				<minDaysB4Next>.5</minDaysB4Next>
				<maxDaysB4Next>.8</maxDaysB4Next>

				<graceDays>.3</graceDays>
				<randomGrace>.5</randomGrace>
				
				<spawnMaxAdjacent>40</spawnMaxAdjacent>
				<spawnForbidden>false</spawnForbidden>

				<hungerRelative>true</hungerRelative>
				
				<ageWeightedPeriod>true</ageWeightedPeriod>
				<olderSmallerPeriod>false</olderSmallerPeriod>

				<ageWeightedQuantity>true</ageWeightedQuantity>
				<olderBiggerQuantity>false</olderBiggerQuantity>
				<exponentialQuantity>true</exponentialQuantity>
				<!-- must be lower than 20; default = 15; dll limited -->
				<exponentialRatioLimit>15</exponentialRatioLimit>

				<!-- <debug>true</debug> -->

				<spawnVerb>exsudation</spawnVerb>			
			</li>
		</comps>
	</HediffDef>

</Defs>